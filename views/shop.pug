doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title #{docTitle}
    link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href='#') Product
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='#')
              | Shop 
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='admin/add-product') Add Product
          li.nav-item
            a.nav-link.disabled(href='#') Disabled
    main.container
      br
      if prods.length > 0
        div.row
         each product in prods
           div.col-md-3
               div.card
                    img.card-img-top(src='https://cdn.pixabay.com/photo/2014/05/02/21/50/home-office-336377_1280.jpg', alt='Card image cap')
               div.card-body
                h5.card-title #{product.title}
                p.card-text
                    #{product.title}
                a.btn.btn-primary(href='#') Go somewhere
      else
        center
          h1 No Product


